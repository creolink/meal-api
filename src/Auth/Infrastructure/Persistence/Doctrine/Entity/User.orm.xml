<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="App\Auth\Domain\User" table="user" repository-class="App\Auth\Infrastructure\Persistence\Doctrine\Repository\UserRepository">
        <id name="id" type="string" column="id" length="36" unique="true" />
        <field name="email" type="string" column="email" length="255" />
        <field name="roles" type="json_array" column="roles" />
        <field name="password" type="string" column="password" length="255" />
        <field name="country" type="string" column="country" length="3" />
    </entity>
</doctrine-mapping>
